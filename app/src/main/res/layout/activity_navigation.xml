<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    android:id="@+id/drawer"
    tools:context=".Activity.NavigationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="@color/purple_200"
                    android:layout_height="200dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/prf"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/man"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:id="@+id/txname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_below="@+id/prf"
                        android:text="Name"
                        android:fontFamily="@font/robotoslabbold"
                        />



                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="140dp"
                        app:cardElevation="5dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/txname"
                        app:cardCornerRadius="35dp"
                        android:layout_height="35dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cash"
                                android:id="@+id/txCash"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/robotoslabbold"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1500"
                                android:id="@+id/txPrice"
                                android:layout_toRightOf="@+id/txCash"
                                android:textColor="@color/purple_200"
                                android:textSize="16sp"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/robotoslabbold"
                                android:layout_centerVertical="true"/>



                            <ImageView
                                android:layout_width="20dp"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/txPrice"
                                android:src="@drawable/arrow"
                                android:layout_height="20dp"/>


                        </RelativeLayout>



                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:src="@drawable/homeuser"/>


                    <RelativeLayout
                        android:id="@+id/relHome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_centerVertical="true"/>





                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#8F8F8F"/>
                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlEarning"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/wallet"/>


                    <RelativeLayout
                        android:id="@+id/relSetting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Wallent "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_centerVertical="true"/>




                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#8F8F8F"/>



                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlNotification"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/img466"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="13dp"
                        android:src="@drawable/history"/>


                    <RelativeLayout
                        android:id="@+id/rel_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img466">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="History"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_centerVertical="true"/>




                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#8F8F8F"/>



                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/imgnoti"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/notification"/>


                    <RelativeLayout
                        android:id="@+id/reNotification"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imgnoti">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notifications"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_centerVertical="true"/>




                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#8F8F8F"/>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/imgInvite"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/notification"/>


                    <RelativeLayout
                        android:id="@+id/relInvite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/imgInvite">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invite Friends"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_centerVertical="true"/>




                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#8F8F8F"/>


                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/rlSetting"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/settingsuser"/>


                    <RelativeLayout
                        android:id="@+id/rel_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img3">



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/setting"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_centerVertical="true"/>





                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#8F8F8F"/>

                </RelativeLayout>





                <RelativeLayout
                    android:id="@+id/rlLogout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@drawable/logoutuser"/>


                    <RelativeLayout
                        android:id="@+id/rel_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/img4">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/robotoslabregular"
                            android:layout_centerVertical="true"/>




                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#8F8F8F"/>


                </RelativeLayout>










            </LinearLayout>










        </LinearLayout>



    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
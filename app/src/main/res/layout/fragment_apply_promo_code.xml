<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/greylight_rounded"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ApplyPromoCodeFragment">

  <RelativeLayout
      android:layout_width="match_parent"


      android:layout_height="220dp">


      <RelativeLayout
          android:layout_width="match_parent"
          android:id="@+id/rl"
          android:layout_marginTop="10dp"
          android:layout_height="wrap_content">
          <ImageView
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:padding="6dp"
              android:id="@+id/ivCancel"
              android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
              android:src="@drawable/cancel"
              />

          <TextView
              android:id="@+id/txtName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_toLeftOf="@+id/ivCancel"
              android:gravity="center"
              android:fontFamily="@font/robotoslabbold"
              android:text="Promo Code"
              android:textColor="@color/black"
              android:textSize="16sp" />


      </RelativeLayout>


      <com.google.android.material.card.MaterialCardView
          android:layout_width="match_parent"
          android:layout_below="@+id/rl"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginTop="15dp"
          android:layout_height="150dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rlNew"
        android:background="@drawable/greyrounded"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="6dp"
            android:id="@+id/iv"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/promo"
            app:tint="@color/purple_200" />
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/robotoslabregular"
            android:hint="@string/input_promo_code"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="14sp" />


    </RelativeLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVerify"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/rlNew"
        android:layout_marginTop="30dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/apply"
        app:cornerRadius="8dp">


    </com.google.android.material.button.MaterialButton>


</RelativeLayout>


      </com.google.android.material.card.MaterialCardView>

  </RelativeLayout>

</RelativeLayout>